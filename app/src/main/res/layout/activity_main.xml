<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/totalID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ListView
        android:id="@+id/friendListView"
        android:layout_width="191dp"
        android:layout_height="487dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="12dp"
        android:background="#8FBDE0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addFriend" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="269dp"
        android:layout_height="46dp"
        android:layout_marginTop="64dp"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/addItem"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toEndOf="@+id/addFriend"
        app:layout_constraintTop_toBottomOf="@+id/friendListView" />

    <Button
        android:id="@+id/addFriend"
        android:layout_width="151dp"
        android:layout_height="49dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="#2A88D3"
        android:onClick="addFriend"
        android:text="addFriend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/addItem"
        android:layout_width="146dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="27dp"
        android:background="#2A88D3"
        android:onClick="addItem"
        android:text="addItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/itemListView"
        android:layout_width="190dp"
        android:layout_height="483dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="7dp"
        android:background="#8FBDE0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>